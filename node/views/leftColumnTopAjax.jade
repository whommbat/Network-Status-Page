if(weatherAlwaysDisplay || clientIp == '10.0.1.1')
    ul.list-inline(style="margin-bottom: -20px;")
        li
            h1(data-icon=weatherIcon, style="font-size: 500%; margin: 0px -10px 20px -5px;")
        li
            ul.list-unstyled
                li
                    h1.exoregular(style="margin: 0px;") #{currentTemp}&deg;
                li
                    h4.exoregular(style="margin: 0px; padding-right: 10px; width: 80px;") #{currentSummary}
    if(currentWindSpeed > 0)
        h4.exoextralight(style="margin-top: 0px;") Wind: #{currentWindSpeed} mph from the #{currentWindDirection}
    else
        h4.exoextralight(style="margin-top: 0px;") Wind: Calm
    if(minutelySummary != '')
        h4.exoregular Next Hour
        h5.exoextralight(style="margin-top: 10px;") #{minutelySummary}
    h4.exoregular Next 24 Hours
    h5.exoextralight(style="margin-top: 10px;") #{hourlySummary}
    h4.exoregular The Sun
    h5.exoextralight(style="margin-top: 10px;") #{rises} at #{dateFormat(sunriseTime, "HH:MM TT")}
    h5.exoextralight(style="margin-top: 10px;") #{sets} at #{dateFormat(sunsetTime, "HH:MM TT")}
    p.text-right.no-link-color(style="margin-bottom: -10px;")
        small
            a(href="http://forecast.io/#/f/" + weatherLatitude + "," + weatherLongitude) Forecast.io
